@model List<Lab1.Models.ViewModels.CurrencyViewModel>

@{
    ViewData["Title"] = "Currency";
}

<h2>Currency</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Date)
            </th>
            <th>
                Bought Currency
            </th>
            <th>
                Earned Currency
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rev in Model)
        {
            <tr>
                <td>
                    @rev.Date.ToShortDateString()
                </td>
                <td>
                    @rev.BoughtCurrency
                </td>
                <td>
                    @rev.EarnedCurrency
                </td>
            </tr>
        }
    </tbody>
</table>
