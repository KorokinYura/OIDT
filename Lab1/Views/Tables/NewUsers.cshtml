@model List<Lab1.Models.FirstGameLaunch>

@{
    ViewData["Title"] = "NewUsers";
}

<h2>New Users</h2>
<hr />

@{
    var dates = Model.Select(m => m.Date).Distinct().OrderBy(d => d.Date).ToList();
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Date)
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var date in dates)
        {
            <tr>
                <td>
                    @date.ToShortDateString()
                </td>
                <td>
                    @Model.Count(m => m.Date == date)
                </td>
            </tr>
        }
    </tbody>
</table>
